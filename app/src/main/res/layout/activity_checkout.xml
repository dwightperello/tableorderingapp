<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.activity.CheckoutActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/chicken"
        android:scaleType="fitXY" />

    <androidx.recyclerview.widget.RecyclerView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rv_submenu_images"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#80000000">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_10sdp">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:src="@drawable/ic_arrow_back"
                    android:id="@+id/back_arrow_to_main"/>
                <TextView
                    android:id="@+id/txt_your_orders"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="Your Orders"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/white"/>


            </LinearLayout>
<!--            <View-->
<!--                android:layout_marginTop="@dimen/_5sdp"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="2dp"-->
<!--                android:layout_marginStart="@dimen/_15sdp"-->
<!--                android:layout_marginEnd="@dimen/_20sdp"-->
<!--                android:background="@color/teal_200"-->
<!--                android:layout_marginBottom="@dimen/_5sdp"/>-->

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="600dp"
                android:id="@+id/rv_item_checkout"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

               >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="@dimen/_10sdp"
                   >
                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"
                     android:orientation="horizontal"
                     android:layout_marginStart="@dimen/_5sdp"
                     android:layout_marginEnd="@dimen/_5sdp">
                     <Button
                         android:layout_width="0dp"
                         android:layout_height="wrap_content"
                         android:layout_weight="1"
                         android:text="Submit order"
                         android:textColor="@color/white"
                         android:gravity="center"
                         android:backgroundTint="@color/buttonbg"
                         android:background="@drawable/roundedbutton"
                         android:id="@+id/btn_submit_order"/>
                     <TextView
                         android:layout_width="0dp"
                         android:layout_weight="1"
                         android:layout_height="wrap_content"
                         android:text="100"
                         android:textColor="@color/white"
                         android:textSize="@dimen/_10sdp"
                         android:gravity="center"
                         android:id="@+id/txt_total_amount"/>
                 </LinearLayout>


                </LinearLayout>

            </FrameLayout>



        </LinearLayout>



        <!--RIGHT-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">

        </LinearLayout>

    </LinearLayout>





</FrameLayout>