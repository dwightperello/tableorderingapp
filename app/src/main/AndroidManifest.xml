<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".TableApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.TableOrderingApp"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".presentation.activity.OrderStatus"
            android:exported="false"
            android:theme="@style/Theme.saving.nobar"/>
        <activity
            android:name=".presentation.activity.CheckoutActivity"
            android:exported="false"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.saving.nobar" />
        <activity
            android:name=".presentation.activity.SettingsActivity"
            android:exported="false"
            android:label="@string/title_activity_settings"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.saving.nobar" />
        <activity
            android:name=".presentation.activity.AddToCartActivity"
            android:exported="false"
            android:screenOrientation="landscape"
            android:theme="@style/CustomDialog" />
        <activity
            android:name=".presentation.activity.MainActivity"
            android:exported="true"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.saving.nobar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>